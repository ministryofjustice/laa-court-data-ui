.govuk-heading-m
  = t('search.result.offence.heading')

%table.govuk-table
  %caption.govuk-table__caption.govuk-visually-hidden
    = t('search.result.offence.caption')
  %thead.govuk-table__head
    %tr.govuk-table__row
      %th.govuk-table__header{ scope: 'col' }= t('search.result.offence.title')
      %th.govuk-table__header{ scope: 'col' }= t('search.result.offence.plea')
      %th.govuk-table__header{ scope: 'col' }= t('search.result.offence.mode_of_trial')
  %tbody.govuk-table__body
    - @defendant.offences.each do |offence|
      %tr.govuk-table__row
        %td.govuk-table__cell
          = offence.title
        %td.govuk-table__cell
          = offence.plea || t('generic.not_available')
        %td.govuk-table__cell
          = "#{offence.mode_of_trial}:"
          %br
          = offence.mode_of_trial_reason || t('generic.not_available')
