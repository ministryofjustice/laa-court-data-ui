          .govuk-grid-column-two-thirds
            %h2.govuk-cookie-banner__heading.govuk-heading-m
              = t('layouts.application.cookies.title')
            .govuk-cookie-banner__content
              %p.govuk-body
                = t('layouts.application.cookies.essential_cookies')
              %p.govuk-body.app-js-only
                = t('layouts.application.cookies.analytics_cookies')

