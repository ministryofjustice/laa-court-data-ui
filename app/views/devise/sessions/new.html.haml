= govuk_page_heading(t('devise.sessions.user.form.page_title'))

- if FeatureFlag.enabled?(:time_based_access_restriction)
  - content_for :pre_heading do
    = render "shared/alert" do
      %h2.moj-alert__heading
        = t('generic.out_of_hours.alert_title')
      = t('generic.out_of_hours.alert_content')

.govuk-grid-row
  .govuk-grid-column-two-thirds
    = button_to user_entra_omniauth_authorize_path, class: 'govuk-button govuk-button--start' do
      = t('devise.sessions.user.form.submit')
      %svg.govuk-button__start-icon{ focusable: "false", height: "19", viewbox: "0 0 33 40", width: "17.5", xmlns: "http://www.w3.org/2000/svg" }
        %path{ d: "M0 0h13l20 20-20 20H0l20-20z", fill: "currentColor" }


- if FeatureFlag.enabled?(:fake_auth)
  .govuk-grid-row
    .govuk-grid-column-two-thirds
      = form_with(url: fake_user_session_path) do |f|
        = f.govuk_select :user_id, User.where("email ILIKE '%example.com'").pluck(:email, :id), label: { text: t('devise.shared.fake_auth') }
        = f.govuk_submit t('devise.shared.links.sign_in_without_sso')
