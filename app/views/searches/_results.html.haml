= render partial: 'results_header', locals: { term: term, dob: dob, results: results }
- if results.empty?
  = render 'results/none'
- elsif results.first.is_a? CourtDataAdaptor::Resource::ProsecutionCase
  -# TODO: is there ever a situation where this happens? Can we clear out
     this elsif statement and the associated partial/specs?
  = render partial: 'results/prosecution_case', locals: { results: results }
- elsif FeatureFlag.enabled?(:show_appeals)
  = render partial: 'results/defendant_appeals',
           locals: { results: decorate_all(results, Cda::DefendantSummaryDecorator) }
- else
  = render partial: 'results/defendant',
           locals: { results: decorate_all(results, Cda::DefendantSummaryDecorator) }
