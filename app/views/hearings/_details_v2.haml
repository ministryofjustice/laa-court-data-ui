%div{:class => "govuk-!-margin-bottom-9"}
  .govuk-heading-l
    = t('generic.detail')
  .govuk-heading-s{:class => "govuk-!-margin-bottom-1"}
    = t('hearings.show.hearing_type')
  %p.govuk-body{:class => "govuk-!-margin-bottom-2"}
    = hearing.hearing.hearing_type.description || t('generic.not_available')
  .govuk-heading-s{:class => "govuk-!-margin-bottom-1"}
    = t('hearings.show.court')
  %p.govuk-body{:class => "govuk-!-margin-bottom-2"}
    = hearing.hearing.court_centre.name || t('generic.not_available')
  .govuk-heading-s{:class => "govuk-!-margin-bottom-1"}
    = t('hearings.show.time_listed')
  %p.govuk-body{:class => "govuk-!-margin-bottom-2"}
    = hearing.hearing.hearing_days[0].sitting_day.to_datetime.strftime('%H:%M') || t('generic.not_available')
